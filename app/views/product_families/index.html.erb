<h1>Listing product_families</h1>

<table class="table table-condensed table-striped datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_families.each do |product_family| %>
      <tr>
        <td><%= product_family.name %></td>
        <td><%= link_to 'Show', product_family %></td>
        <td><%= link_to 'Edit', edit_product_family_path(product_family) %></td>
        <td><%= link_to 'Destroy', product_family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

