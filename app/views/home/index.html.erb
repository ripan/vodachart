<%= form_tag({:controller=>:orders, :action => :search}, {:id => "frm_order_search", :role => "form", :remote => true}) do  %>
<div class="row">

	<div class="col-md-6">
		<h4>Select Alien</h4>
		<div class="well">
			<%=label_tag :galaxies%>
			<select id="galaxy" name="galaxy" class="form-control">
				<option value="">Select Galaxy</option>
				<%Galaxy.all.each do |galaxy|%>
				<option value="<%=galaxy.name%>"><%=galaxy.name%></option>
				<%end%>
			</select>
			<%=label_tag :planets%>
			<select id="planet" name="planet"  class="form-control">
				<option value="">Select Planet</option>
				<%Planet.all.each do |planet|%>
				<option value="<%=planet.name%>" class="<%=planet.galaxy.name%>"><%=planet.name%></option>
				<%end%>
			</select>
			<%=label_tag "Aliens (Alien Category)"%>
			<select id="alien" name="alien"  class="form-control">
				<option value="">Select Alien</option>
				<%Alien.all.each do |alien|%>
				<option value="<%=alien.id%>" class="<%=alien.planet.name%>"><%=alien.name%> (<%=alien.alien_category.name%>)</option>
				<%end%>
			</select>
		</div>
	</div>

	<div class="col-md-6">
		<h4>Select Product</h4>
		<div class="well">
			<%=label_tag :product_families%>
			<select id="product_family" name="product_family"  class="form-control">
				<option value="">Select Product Family</option>
				<%ProductFamily.all.each do |product_family|%>
				<option value="<%=product_family.name%>"><%=product_family.name%></option>
				<%end%>
			</select>
			<%=label_tag "Products (Product Family)"%>
			<select id="product" name="product"  class="form-control">
				<option value="">Select product</option>
				<%Product.all.each do |product|%>
				<option value="<%=product.id%>" class="<%=product.product_family.name%>"><%=product.name%> (<%=product.product_family.name%>)</option>
				<%end%>
			</select>
		</div>
	</div>

</div>

<div class="row">
	<div class="col-md-6">
		<%= submit_tag "Show orders", :class => "btn btn-large btn-primary"%>
	</div>
</div>
<% end %>



<div class="row">
	<div id="orders" class="col-md-12">
		<!-- filtered orders goes here-->
	</div>
</div>

