<h1>Listing aliens</h1>

<table class="table table-condensed table-striped datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alien category</th>
      <th>Planet</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @aliens.each do |alien| %>
      <tr>
        <td><%= alien.name %></td>
        <td><%= alien.alien_category.name %></td>
        <td><%= alien.planet.name %></td>
        <td><%= link_to 'Show', alien %></td>
        <td><%= link_to 'Edit', edit_alien_path(alien) %></td>
        <td><%= link_to 'Destroy', alien, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alien', new_alien_path %>
